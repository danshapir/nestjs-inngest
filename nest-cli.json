{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false,
    "tsConfigPath": "tsconfig.build.json"
  },
  "projects": {
    "nestjs-inngest": {
      "type": "library",
      "root": "",
      "entryFile": "index",
      "sourceRoot": "src",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.build.json"
      }
    },
    "integration-test": {
      "type": "application",
      "root": "test/e2e",
      "entryFile": "app/main",
      "sourceRoot": "test/e2e",
      "compilerOptions": {
        "tsConfigPath": "test/e2e/tsconfig.app.json"
      }
    }
  }
}